@model Person
@{
    ViewData["Title"] = "Member Detail";
    var index = (int)ViewBag.PersonIndex;
}
<div class="row">
    <div class="col-6 offset-3">
        <h1>@ViewData["Title"]</h1>
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <label class="form-control">@Model?.FirstName</label>

        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <label class="form-control">@Model?.LastName</label>

        </div>
        <div class="form-group">
            <label asp-for="Gender"></label>
            <label class="form-control">@Model?.Gender</label>

        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <label class="form-control">@Model?.PhoneNumber&nbsp;</label>

        </div>
        <div class="form-group">
            <label asp-for="BirthPlace"></label>
            <label class="form-control">@Model?.BirthPlace</label>

        </div>
        <div class="form-group">
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this item?
                            </div>
                            <div class="modal-footer">
                                <form asp-controller="Rookies" asp-action="DeleteWithResult" asp-route-index="@index"
                                    method="post">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary btn-sa" >OK</button>
                                </form>
                            </div>
                        
                    </div>
                </div>
            </div>


            <a class="btn btn-secondary" asp-controller="Rookies" asp-action="Index">Back</a>
            <button type="submit" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Delete</button>

        </div>


    </div>
</div>