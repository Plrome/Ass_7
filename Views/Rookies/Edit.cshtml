@model Person
@{
    ViewData["Title"] = "Edit";
    var index = (int)ViewBag.PersonIndex;
}
<div class="row">
    <div class="col-6 offset-3">
        <h1>@ViewData["Title"]</h1>
        <div asp-validation-summary="All"></div>
        <form asp-controller="Rookies" asp-action="Edit" asp-route-index="@index" method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="First name">
                <span asp-validation-for="FirstName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Last name">
                <span asp-validation-for="LastName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Male">Female</option>
                </select>
                <span asp-validation-for="LastName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder=" Phone Number">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="BirthPlace"></label>
                <input asp-for="BirthPlace" type="text" class="form-control" placeholder=" Birth Place">
                <span asp-validation-for="BirthPlace" class="text-danger"></span>

            </div>
            <div class="form-group">
                @* <input type="hidden" asp-for="Index" /> *@
                <a class="btn btn-secondary" asp-controller="Rookies" asp-action="Index">Back</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div>
</div>